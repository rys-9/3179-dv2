{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 720,
    "height": 270,
    "title": "Number of accidents by Weather Condition",
    "config": {
        "view": {
        "stroke": "transparent"
        },
        "legend": {"orient": "bottom"}
    },
    "background": "#fcfcfc",
    "data": {"url": "https://raw.githubusercontent.com/rys-9/fit3179-hw-wk9/main/data/weather-sev-count.csv"},
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Weather_Condition",
        "type": "nominal",
        "title": "Weather"
      },

      "y": {
        "field":"Num_of_Occurrences", 
        "type": "quantitative", "axis": {"title": "Number of Accidents"}
      },
      "color": {
        "field": "Severity",
        "type": "nominal",
        "scale": {
          "domain": ["1","2","3","4"],
          "range": ["#e7ba52", "#ff5c64", "#c7aec7", "#1179b0"]
        },
        "title": "Severity Level"
      },
      "tooltip": [
        {"field": "Weather_Condition", "type": "nominal", "title": "Weather"},
        {"field": "Severity", "type": "nominal", "title": "Severity"},
        {"field": "Num_of_Occurrences", "type": "quantitative", "title": "Number of Accidents"}
    ]
    }
  }