{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 720,
    "height": 270,
    "background": "#fcfcfc",
    "config": {
      "axis": {
        "labelColor": "#2a3f43",
        "titleColor": "#2a3f43"
      },
      "legend": {
        "labelColor": "#2a3f43",
        "titleColor": "#2a3f43",
        "orient": "bottom"
      },
      "view": {
        "stroke": "transparent"
      }
    },
    "data": {
        "url": "./data/hour-sev-count.csv",
        "format": {"type": "csv"}
    },
    "mark": "circle",
    "encoding": {
      "y": {
        "field": "Severity",
        "type": "nominal"
      },
      "x": {
        "field": "Hour",
        "type": "ordinal",
        "title": "Hour of Occurence"
      },
      "size": {
        "field": "Num_of_Occurrences",
        "type": "quantitative"
      },
      "color": {
        "field": "Num_of_Occurrences",
        "type": "quantitative",
        "scale": {
          "scheme": "oranges"
        },
        "title": "Number of Accidents"
      }
    }
  }