{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 480,
    "height": 270,
    "title": "Number of accidents by Temperature (F)",
    "background": "#fcfcfc",
    "config": {
      "legend": {
        "labelColor": "#2a3f43",
        "titleColor": "#2a3f43",
        "orient": "right"
      },
      "view": {
        "stroke": "transparent"
      }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/rys-9/3179-dv2/main/data/temp-count.csv",
        "format": {"type": "csv"}
    },
    "mark": "arc",
    "encoding": {
      "theta": {"field": "Count", "type": "quantitative"},
      "color": {"field": "Temp", "type": "nominal", "scale": {"scheme": "tableau10"}},
      "tooltip": [
        {"field": "Temp", "type": "nominal", "title": "Temp (F)"},
        {"field": "Count", "type": "quantitative", "title": "Number of Accidents"}
    ]
    }
}