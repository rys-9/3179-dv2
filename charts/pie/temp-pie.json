{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 480,
    "height": 270,
    "title": "Number of accidents by Temperature (F)",
    "background": "#fcfcfc",
    "config": {
      "legend": {
        "labelColor": "#2a3f43",
        "titleColor": "#2a3f43",
        "orient": "right"
      },
      "view": {
        "stroke": "transparent"
      }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/rys-9/3179-dv2/main/data/temp-count.csv",
        "format": {"type": "csv"}
    },
    "mark": "arc",
    "encoding": {
      "theta": {"field": "Count", "type": "quantitative"},
      "color": {"field": "Temp", "type": "nominal", "scale": {
        "domain": [
          "(-)9-0", "1-10", "11-20", "21-30", "31-40",
          "41-50", "51-60", "61-70", "71-80", "81-90"
          ],
        "range": [
          "#2d747a", "#54b2fc", "#8de4d3", "#b9b9b9", "#8f5b73",
          "#b53c7d" , "#f886bf", "#fb0998", "#ffa270", "#e23209"
          ]
        }
      },
      "tooltip": [
        {"field": "Temp", "type": "nominal", "title": "Temp (F)"},
        {"field": "Count", "type": "quantitative", "title": "Number of Accidents"}
    ]
    }
}